<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/button_pressed_background" />
            <stroke
                android:width="@dimen/button_border_width"
                android:color="@color/button_border_color" />
            <corners
                android:radius="@dimen/button_corner_radius" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_gradient_start_color"
                android:endColor="@color/button_gradient_end_color"
                android:angle="270" />
            <stroke
                android:width="@dimen/button_border_width"
                android:color="@color/button_gradient_border_color" />
            <corners
                android:radius="@dimen/button_corner_radius" />

        </shape>
    </item>
</selector>