<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_view_twitter_logo"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_margin="@dimen/logo_margin"
        android:src="@drawable/twitter_dark"
        android:contentDescription="@string/application_logo_content_description" />

    <Button
        android:id="@+id/button_authorize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authenticate"
        android:padding="@dimen/menu_button_padding" />

    <Button
        android:id="@+id/button_android_dev_tweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_dev_tweets"
        android:padding="@dimen/menu_button_padding" />

    <Button
        android:id="@+id/button_my_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_stream"
        android:padding="@dimen/menu_button_padding" />

</LinearLayout>