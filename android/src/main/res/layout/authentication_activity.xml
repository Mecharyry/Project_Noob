<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_twitter_logo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/twitter_dark" />

    <Button
        android:id="@+id/button_authorize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_twitter_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/button_authorize_text" />

    <Button
        android:id="@+id/button_clear_credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_authorize"
        android:layout_centerHorizontal="true"
        android:text="@string/clear_credentials" />

    <Button
        android:id="@+id/button_android_dev_tweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_clear_credentials"
        android:layout_centerHorizontal="true"
        android:text="Android Dev Tweets" />

    <Button
        android:id="@+id/button_my_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_android_dev_tweets"
        android:layout_centerHorizontal="true"
        android:text="My Stream" />

</RelativeLayout>

