<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mecharyry">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:theme="@android:style/Theme.Light">

        <activity
            android:name="com.github.mecharyry.auth.AuthenticationActivity"
            android:label="@string/title_activity_authentication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.mecharyry.auth.oauth.OAuthRequesterActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="mecharyry-android" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.mecharyry.tweetlist.AndroidDevTweetsActivity"
            android:label="@string/title_activity_list_view">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="com.github.mecharyry.ANDROID_TWEETS_INTENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.github.mecharyry.tweetlist.MyStreamActivity"
            android:label="@string/title_activity_my_stream">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="com.github.mecharyry.MY_STREAM_INTENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
